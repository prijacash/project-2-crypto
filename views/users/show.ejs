

<p><%= user.name %></p>
<a href="/users/new" class="btn btn-primary">Create a new insight</a>

<hr />

<h2>Insights</h2>

<% if(user.id && insight.userId) { %>
  <% insight.forEach(function(a) { %>
    <div class="well">
      <h3>
        <a href="/users/<%= a.id %>"><%= a.title %></a>
      </h3>
    </div>
  <% }) %>
<% } else { %>
  <h3>No insight yet!</h3>
<% } %>